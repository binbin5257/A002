<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_tutorial"
    android:background="@drawable/pop_black_bg"
    android:visibility="gone">


    <RelativeLayout
        android:id="@+id/ll_active"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pop_menu_bg"
            >

            <ImageView
                  android:id="@+id/iv_active"
                  android:layout_width="match_parent"
                  android:layout_height="140dp"
                  android:layout_marginTop="5dp"
                  android:src="@drawable/bg_active"
                  android:scaleType="fitXY"/>
              <TextView
                  android:id="@+id/title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/iv_active"
                  android:text="智网安全出行"
                  android:textSize="14sp"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="32dp"/>

            <TextView
                android:id="@+id/content_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="第一次使用？"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/content_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/content_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="推荐您阅读使用手册"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_read_tutorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/content_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:background="@drawable/radio_inspect_uncheck_bg"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="阅读使用手册"
                android:textSize="14sp" />

        </RelativeLayout>

    </RelativeLayout>
    <ImageView
        android:id="@+id/close_tutorial"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/bg_close"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_active"
        android:layout_marginTop="24dp"/>
</RelativeLayout>