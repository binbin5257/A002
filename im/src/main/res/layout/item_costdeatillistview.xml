<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/text_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cost_height_68"
        android:paddingLeft="@dimen/margin_size_16"
        android:paddingRight="@dimen/margin_size_16"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_10">

            <TextView
                android:id="@+id/cost_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/txt_size_14"
                android:textColor="@color/login_hint_color"/>

            <TextView
                android:id="@+id/cost_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentRight="true"
                android:textSize="@dimen/txt_size_14"
                android:textColor="@color/cost_color"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_size_5"
            android:layout_marginTop="@dimen/margin_size_10">

            <TextView
                android:id="@+id/cost_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/txt_size_14"
                android:textColor="@color/title_text_color"/>

            <TextView
                android:id="@+id/cost_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentRight="true"
                android:textSize="@dimen/txt_size_14"
                android:textColor="@color/title_text_color"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
