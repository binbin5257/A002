<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/topbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_tab_no"
        android:layout_marginTop="@dimen/margin_left_1_default"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:id="@+id/revert_time_ryt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/revert_time_height"
        android:layout_marginLeft="@dimen/margin_left_1_default"
        android:layout_marginRight="@dimen/margin_left_1_default">

        <ImageView
            android:id="@+id/revert_icon_1_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/key_icon_time"/>

        <ImageView
            android:id="@+id/revert_icon_2_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/currency_arrow_right"/>

        <TextView
            android:id="@+id/revert_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_1_default"
            android:layout_marginRight="@dimen/margin_left_1_default"
            android:layout_toLeftOf="@id/revert_icon_2_iv"
            android:layout_toRightOf="@id/revert_icon_1_iv"
            android:hint="@string/revert_time_hint"
            android:text=""
            android:textColor="@color/order_car_info_text_color"
            android:textSize="@dimen/revert_text_size"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_tab_no"
        android:background="@color/line_bg"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_tab_no"
        android:layout_marginTop="@dimen/margin_left_1_default"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:id="@+id/revert_address_ryt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/revert_time_height"
        android:layout_marginLeft="@dimen/margin_left_1_default"
        android:layout_marginRight="@dimen/margin_left_1_default">

        <ImageView
            android:id="@+id/revert_icon_3_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/routedetaillactivity_huan"/>


        <TextView
            android:id="@+id/revert_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_1_default"
            android:layout_toRightOf="@id/revert_icon_3_iv"
            android:text="北京"
            android:textColor="@color/order_car_info_title_color"
            android:textSize="@dimen/revert_text_size"/>

        <ImageView
            android:id="@+id/revert_icon_4_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/currency_arrow_right"/>

        <TextView
            android:id="@+id/revert_address_select_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_1_default"
            android:layout_marginRight="@dimen/margin_left_1_default"
            android:layout_toLeftOf="@id/revert_icon_4_iv"
            android:layout_toRightOf="@id/revert_address_tv"
            android:hint="@string/revert_address_hint"
            android:text=""
            android:textColor="@color/order_car_info_title_color"
            android:textSize="@dimen/revert_text_size"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_tab_no"
        android:background="@color/line_bg"/>

    <TextView
        android:id="@+id/key_have_confirm_tv"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/default_btn_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_left_1_default"
        android:layout_marginRight="@dimen/margin_left_1_default"
        android:layout_marginTop="@dimen/margin_left_1_default"
        android:background="@drawable/btn_confirm_bg"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/btn_confirm"
        android:textColor="@color/White"
        android:textSize="@dimen/order_confirm_size"/>
</LinearLayout>
