<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/map_infowindow_width"
    android:layout_height="@dimen/map_infowindow_height"
    android:background="@drawable/map_hlist_infowindow_bg"
    android:orientation="vertical"
    android:paddingLeft="10dp">

    <TextView
        android:id="@+id/item_location_infowindow_parkname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="61"
        android:gravity="center"
        android:textColor="@color/White"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="87"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_location_infowindow_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/map_infowindow_green"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
