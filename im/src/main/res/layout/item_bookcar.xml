<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/item_usercar_iv"
                android:layout_width="@dimen/map_bottomlayout_iv_width"
                android:layout_height="@dimen/map_bottomlayout_iv_height"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_left_1_default"
                android:src="@drawable/map_hlist_car" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left_1_default"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/item_usercar_seriesName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="北京现代"
                    android:textColor="@color/default_color_gray"
                    android:textSize="@dimen/text_size_41" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/map_hlist_money" />


                    <TextView
                        android:id="@+id/item_usercar_totalcost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_1_default"
                        android:text="剩余电量 0 公里"
                        android:textColor="@color/default_color_gray"
                        android:textSize="@dimen/text_size_41" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
