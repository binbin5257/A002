<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/topbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_top_tab_no"
                android:layout_marginTop="@dimen/order_marin_top"
                android:background="@color/line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_car_info_height"
                android:layout_marginLeft="@dimen/margin_left_1_default"
                android:layout_marginRight="@dimen/margin_left_1_default">

                <ImageView
                    android:id="@+id/pay_icon_iv"
                    android:layout_width="@dimen/order_icon_width"
                    android:layout_height="@dimen/order_icon_height"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_left_1_default"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pay_info_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/order_car_info_tiele_color"
                            android:textSize="@dimen/order_car_info_title_size" />

                        <TextView
                            android:id="@+id/pay_info_number_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/order_text_to_text"
                            android:text=""
                            android:textColor="@color/order_car_info_text_color"
                            android:textSize="@dimen/order_car_info_title_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/order_text_to_text_top"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pay_travel"
                            android:textColor="@color/order_car_info_tiele_color"
                            android:textSize="@dimen/order_car_info_title_size" />

                        <TextView
                            android:id="@+id/pay_trip_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/order_text_to_text"
                            android:text=""
                            android:textColor="@color/order_text_color"
                            android:textSize="@dimen/order_car_info_title_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/order_text_to_text_top"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pay_time"
                            android:textColor="@color/order_car_info_tiele_color"
                            android:textSize="@dimen/order_car_info_title_size" />

                        <TextView
                            android:id="@+id/pay_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/order_text_to_text"
                            android:text=""
                            android:textColor="@color/order_text_color"
                            android:textSize="@dimen/order_car_info_title_size"
                            android:visibility="visible" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_top_tab_no"
                android:layout_marginLeft="@dimen/margin_left_1_default"
                android:background="@color/line_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pay_order_info_height">

                <View
                    android:id="@+id/pay_address_lin_v"
                    android:layout_width="@dimen/par_order_info_lin"
                    android:layout_height="@dimen/height_top_tab_no"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="23dp"
                    android:background="@color/line_bg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_left_1_default"
                    android:layout_toLeftOf="@id/pay_address_lin_v"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pay_address_reservation_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=""
                            android:textColor="@color/pay_address_text_color"
                            android:textSize="@dimen/pay_address_text_size" />

                        <TextView
                            android:id="@+id/pay_address_reservation_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:text=""
                            android:textColor="@color/pay_address_text_color"
                            android:textSize="@dimen/pay_address_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_1_default"
                        android:src="@drawable/routedetaillactivity_qu" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_1_default"
                    android:layout_toRightOf="@id/pay_address_lin_v"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/routedetaillactivity_huan" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_1_default"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pay_address_return_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text=""
                            android:textColor="@color/pay_address_text_color"
                            android:textSize="@dimen/pay_address_text_size" />

                        <TextView
                            android:id="@+id/pay_address_return_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:text=""
                            android:textColor="@color/pay_address_text_color"
                            android:textSize="@dimen/pay_address_text_size" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_top_tab_no"
                android:background="@color/line_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_top_tab_no"
                android:layout_marginTop="@dimen/margin_left_1_default"
                android:background="@color/line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pay_info"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_1_default"
                        android:text="@string/pay_order_info_odometer"
                        android:textColor="@color/order_car_info_tiele_color"
                        android:textSize="@dimen/pay_order_text_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_1_default">


                        <TextView
                            android:id="@+id/pay_order_info_odometer_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/margin_left_1_default"
                            android:text=""
                            android:textColor="@color/order_car_info_tiele_color"
                            android:textSize="@dimen/pay_order_text_size" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pay_order_text_to_text">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_1_default"
                        android:text="@string/pay_order_info_time"
                        android:textColor="@color/order_car_info_tiele_color"
                        android:textSize="@dimen/pay_order_text_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_1_default">


                        <TextView
                            android:id="@+id/pay_order_info_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/margin_left_1_default"
                            android:text=""
                            android:textColor="@color/order_car_info_tiele_color"
                            android:textSize="@dimen/pay_order_text_size" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pay_order_text_to_text">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_1_default"
                        android:text="@string/pay_order_info_odometer_cost"
                        android:textColor="@color/order_car_info_tiele_color"
                        android:textSize="@dimen/pay_order_text_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_1_default">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/order_unit"
                            android:textColor="@color/order_car_info_tiele_color"
                            android:textSize="@dimen/pay_order_text_size" />

                        <TextView
                            android:id="@+id/pay_order_info_odometer_cost_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/margin_left_1_default"
                            android:text=""
                            android:textColor="@color/order_car_info_tiele_color"
                            android:textSize="@dimen/pay_order_text_size" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pay_order_text_to_text">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_1_default"
                        android:text="@string/pay_order_info_time_cost"
                        android:textColor="@color/order_car_info_tiele_color"
                        android:textSize="@dimen/pay_order_text_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_1_default">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/order_unit"
                            android:textColor="@color/order_car_info_tiele_color"
                            android:textSize="@dimen/pay_order_text_size" />

                        <TextView
                            android:id="@+id/pay_order_info_time_cost_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/margin_left_1_default"
                            android:text=""
                            android:textColor="@color/order_car_info_tiele_color"
                            android:textSize="@dimen/pay_order_text_size" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_top_tab_no"
                android:background="@color/line_bg" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pay_pay_height"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_1_default"
                        android:text="@string/pay_order_info_amountPayable"
                        android:textColor="@color/order_car_info_tiele_color"
                        android:textSize="@dimen/pay_order_text_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_1_default">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/order_unit"
                            android:textColor="@color/order_car_info_tiele_color"
                            android:textSize="@dimen/pay_order_text_size" />

                        <TextView
                            android:id="@+id/pay_order_info_amountPayable_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/margin_left_1_default"
                            android:text=""
                            android:textColor="@color/order_car_info_tiele_color"
                            android:textSize="@dimen/pay_order_text_size" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_top_tab_no"
                android:background="@color/line_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_top_tab_no"
                android:layout_marginTop="@dimen/margin_left_1_default"
                android:background="@color/line_bg" />

            <RelativeLayout
                android:id="@+id/pay_payment_method_ryt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_item_height">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_1_default">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/order_payment_method"
                        android:textColor="@color/order_car_info_tiele_color"
                        android:textSize="@dimen/pay_order_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_1_default">

                    <ImageView
                        android:id="@+id/pay_payment_method_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/order_image_to_text_to_image"
                        android:src="@drawable/order_alipay" />

                    <TextView
                        android:id="@+id/pay_payment_method_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/order_image_to_text_to_image"
                        android:text="@string/order_alipay"
                        android:textColor="@color/order_car_info_tiele_color"
                        android:textSize="@dimen/pay_order_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_left_1_default"
                        android:src="@drawable/icon_me_detailed" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_top_tab_no"
                android:background="@color/line_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pay_order_text_to_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_1_default"
                    android:text="@string/pay_order_info_amountAccount"
                    android:textColor="@color/order_car_info_tiele_color"
                    android:textSize="@dimen/pay_pay_text_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_1_default">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/order_unit"
                        android:textColor="@color/order_car_info_tiele_color"
                        android:textSize="@dimen/pay_order_text_size" />

                    <TextView
                        android:id="@+id/pay_order_info_amountAccount_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_left_1_default"
                        android:text=""
                        android:textColor="@color/order_car_info_tiele_color"
                        android:textSize="@dimen/pay_pay_text_size" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pay_order_text_to_text">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_1_default">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/order_payment_amount"
                        android:textColor="@color/order_car_info_tiele_color"
                        android:textSize="@dimen/pay_pay_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_1_default">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/order_unit"
                        android:textColor="@color/order_car_info_tiele_color"
                        android:textSize="@dimen/pay_pay_text_size" />

                    <TextView
                        android:id="@+id/order_payment_sum_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_left_1_default"
                        android:text=""
                        android:textColor="@color/order_car_info_tiele_color"
                        android:textSize="@dimen/pay_pay_text_size" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/pay_confirm_tv"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_btn_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_1_default"
                android:layout_marginRight="@dimen/margin_left_1_default"
                android:layout_marginTop="@dimen/margin_left_2_default"
                android:background="@drawable/btn_confirm_bg"
                android:gravity="center"
                android:singleLine="true"
                android:text="支付"
                android:textColor="@color/White"
                android:textSize="@dimen/order_confirm_size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
