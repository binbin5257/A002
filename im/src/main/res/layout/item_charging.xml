<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ic_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/bg_charging_navigation"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"/>
            <TextView
                android:layout_toRightOf="@id/ic_iv"
                android:id="@+id/charging_name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:id="@+id/charging_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:textColor="@color/textcolor80"
                android:layout_marginTop="8dp"/>
            <TextView
                android:textSize="12sp"
                android:id="@+id/charging_address"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/charging_name"
                android:textColor="@color/textcolor80"
                android:layout_alignLeft="@+id/charging_name"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:id="@+id/charging_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1km"
                android:layout_alignBaseline="@+id/charging_address"
                android:textColor="@color/textcolor80"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"/>
            <TextView
                android:textSize="12sp"
                android:id="@+id/service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/charging_address"
                android:layout_alignLeft="@+id/charging_address"
                android:textColor="@color/textcolor80"
                android:layout_marginTop="8dp"
               />
            <TextView
                android:id="@+id/tv_unknow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:visibility="gone"
                android:textColor="@color/textcolor80"
                android:text="线下支付"
                android:textSize="12sp"
                android:layout_alignBottom="@id/service_name"/>
            <RelativeLayout
                android:id="@+id/rl_online"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_alignBottom="@id/service_name">
                <ImageView
                    android:id="@+id/iv_wx"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/order_wechat"
                    android:layout_alignParentRight="true"
                    />
                <ImageView
                    android:id="@+id/iv_ali"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/order_alipay"
                    android:layout_toLeftOf="@+id/iv_wx"
                    android:layout_marginRight="8dp"/>
            </RelativeLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backgroud"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/_fast_charging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快充："
                    android:textSize="12sp"
                    android:textColor="@color/textcolor80"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/tv_fast_charging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/5"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/_fast_charging"
                    android:layout_alignBottom="@id/_fast_charging"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/_slow_charging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="慢充："
                    android:textSize="12sp"
                    android:textColor="@color/textcolor80"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/tv_slow_charging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/5"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/_slow_charging"
                    android:layout_alignBottom="@id/_slow_charging"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>