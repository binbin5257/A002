<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_bg">

                <TextView
                    android:id="@+id/car_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/trip_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>
                <LinearLayout
                    android:id="@+id/ll_time_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_below="@id/car_model">
                    <TextView
                        android:id="@+id/trip_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        />
                    <TextView
                        android:id="@+id/tv_order_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#757575"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_start_trip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_time_cost"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp">
                    <ImageView
                        android:id="@+id/iv_dot_green"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/shape_dot_green"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"/>
                    <TextView
                        android:id="@+id/trip_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginLeft="8dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_toRightOf="@+id/iv_dot_green"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_start_trip"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:id="@+id/iv_dot_red"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/shape_dot_red"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"/>
                    <TextView
                        android:id="@+id/trip_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginLeft="8dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_toRightOf="@+id/iv_dot_red"
                        />
                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>


</RelativeLayout>