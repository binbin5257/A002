<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="232dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:background="@drawable/pop_menu_bg">

        <TextView
            android:id="@+id/dialog_timer_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_1_default"
            android:layout_marginRight="@dimen/margin_left_1_default"
            android:layout_marginTop="14dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="正在鸣笛"
            android:textColor="#727272"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/dialog_timer_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_timer_title_tv"
            android:layout_marginTop="14dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="正在鸣笛"
            android:textColor="#3cb4ff"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_top_lin_height"
                android:layout_centerHorizontal="true"
                android:background="@color/line_bg"/>

            <RelativeLayout
                android:id="@+id/dialog_timer_button_rly"
                android:layout_width="match_parent"
                android:layout_height="42dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="停止"
                    android:textColor="@color/topbar_bg"
                    android:textSize="@dimen/toast_text_size"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>