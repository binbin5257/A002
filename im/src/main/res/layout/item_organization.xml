<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/item_organization_ibm_ryt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_item_height"
        android:background="@drawable/selector_layout_item">

        <TextView
            android:id="@+id/item_organization_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_padding_left"
            android:text="IBM"
            android:textColor="@color/default_color_black"
            android:textSize="@dimen/default_text_size_tip">
        </TextView>

        <ImageView
            android:id="@+id/item_organization_select_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/default_padding_right"
            android:src="@drawable/pop_menu_select"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_split_line_height"
        android:background="@color/default_color_light_gray"/>
</LinearLayout>