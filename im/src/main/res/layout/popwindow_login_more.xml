<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_select"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pop_change_loginid"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical|left"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:text="@string/popwindow_login_more_qiehuanzhanghao"
            android:textColor="#353535"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/ll_pop_change_loginid"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#d9d9d9"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_pop_regist"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical|left"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:text="@string/popwindow_login_more_zhuce"
            android:textColor="#353535"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/ll_pop_regist"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#d9d9d9"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_pop_wexin_login"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical|left"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:text="@string/popwindow_login_more_weixindenglu"
            android:textColor="#353535"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/pop_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_weight="0"
        android:background="@drawable/button_select"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="取消"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:visibility="gone" />

</LinearLayout>