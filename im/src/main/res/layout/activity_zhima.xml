<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/topbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@drawable/bg_bind_zhima"
            android:scaleType="fitXY"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <ImageView
                android:id="@+id/iv_zhima_logo"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:src="@drawable/bg_zhima_logo"
                android:layout_marginRight="16dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"/>
            <TextView
                android:id="@+id/_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="绑定芝麻信用"
                android:textSize="14sp"
                android:layout_below="@+id/iv_zhima_logo"
                android:layout_marginTop="40dp"/>
            <TextView
                android:id="@+id/_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="650分以上即可免押金租车特权"
                android:textSize="14sp"
                android:layout_below="@+id/_bind"
                android:layout_marginTop="4dp"/>
            <Button
                android:id="@+id/btn_bind"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_btn_login"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="立即绑定"
                android:padding="8dp"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="24dp"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
