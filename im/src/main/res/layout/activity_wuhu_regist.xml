<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"

    >

    <include layout="@layout/topbar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_split_line"
        android:background="@color/line_bg" />

    <LinearLayout
        android:id="@+id/login_lyt"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/logo_character_iv"
        android:layout_marginTop="@dimen/margin_size_30"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">


        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_phone"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <EditText
                android:paddingLeft="12dp"
                android:id="@+id/et_phone"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textColorHint="@color/login_hint_color"
                android:textSize="@dimen/txt_size_14" />

            <ImageButton
                android:id="@+id/phone_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12.0dip"
                android:background="@null"
                android:contentDescription="@null"
                android:padding="5.0dip"
                android:src="@drawable/location_search_clear"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_split_line"
        android:background="@color/line_bg"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_code"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp">

                <EditText
                    android:paddingLeft="12dp"
                    android:id="@+id/identifying_code"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:textColorHint="@color/login_hint_color"
                    android:textSize="@dimen/txt_size_14" />

                <ImageButton
                    android:id="@+id/identifying_code_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12.0dip"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:padding="5.0dip"
                    android:src="@drawable/location_search_clear"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/height_split_line"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_size_5"
            android:layout_marginTop="@dimen/margin_size_5"
            android:background="@color/line_bg" />

        <Button
            android:id="@+id/identifying_getcode"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/login_get_code"
            android:textColor="@color/submenu_identification"
            android:textSize="@dimen/txt_size_14"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_split_line"
        android:background="@color/line_bg"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/logo_character_iv"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_password"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <EditText
                android:paddingLeft="12dp"
                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="请输入密码"
                android:maxLength="16"
                android:inputType="textPassword"
                android:textColorHint="@color/login_hint_color"
                android:textSize="@dimen/txt_size_14" />

            <ImageButton
                android:id="@+id/password_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12.0dip"
                android:background="@null"
                android:contentDescription="@null"
                android:padding="5.0dip"
                android:src="@drawable/location_search_clear"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_split_line"
        android:background="@color/line_bg"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/logo_character_iv"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_password"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <EditText
                android:paddingLeft="12dp"
                android:id="@+id/confirm_password"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColorHint="@color/login_hint_color"
                android:textSize="@dimen/txt_size_14" />

            <ImageButton
                android:id="@+id/confirm_password_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12.0dip"
                android:background="@null"
                android:contentDescription="@null"
                android:padding="5.0dip"
                android:src="@drawable/location_search_clear"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_split_line"
        android:background="@color/line_bg"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="24dp"
        android:visibility="gone">
        <TextView
            android:layout_toLeftOf="@+id/voice_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收不到验证码？"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/voice_verification"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="试试语音验证吧"
            android:textColor="@color/important_color_blue"
            android:textSize="12sp"/>
    </RelativeLayout>


    <Button
        android:id="@+id/btn_regist"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/order_item_height"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/btn_confirm_bg"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="立即提交"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
</LinearLayout>
