<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/pop_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@null"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/pop_windows_show_width"
        android:layout_height="180dp"
        android:background="@drawable/pop_menu_bg"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:background="@drawable/pop_alert_bg">

            <TextView
                android:id="@+id/eventselected_popcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="押金退还时间为30个工作日"
                android:lineSpacingExtra="12dp"
                android:gravity="center_horizontal"
                android:textColor="@color/pop_window_color"
                android:textSize="@dimen/txt_size_17"/>

            <TextView
                android:id="@+id/eventselected_popcontent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_left_2_default"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:text="在此期间您的账号将无法用车是否仍然退押金？"
                android:lineSpacingExtra="10dp"
                android:gravity="center_horizontal"
                android:textColor="#FF323232"
                android:textSize="@dimen/txt_size_15"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_lin_height"
            android:layout_centerHorizontal="true"
            android:background="@color/line_bg"/>


        <RelativeLayout
            android:id="@+id/pop_confirm_botton_ryt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/pop_confirm_lin_v"
                android:layout_width="@dimen/height_top_lin_height"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/line_bg"/>

            <TextView
                android:id="@+id/pop_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/pop_confirm_lin_v"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/submenu_identification"
                android:textSize="@dimen/txt_size_17"/>

            <TextView
                android:id="@+id/eventselected_popsend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/pop_confirm_lin_v"
                android:gravity="center"
                android:text="确认"
                android:textColor="#FF797979"
                android:textSize="@dimen/txt_size_17"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
