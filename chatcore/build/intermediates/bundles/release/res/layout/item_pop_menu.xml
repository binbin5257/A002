<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_pop_menu_ryt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_pop_menu_icon_iv"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/order_alipay" />

        <ImageView
            android:id="@+id/item_pop_menu_select_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/pop_menu_select"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/item_pop_menu_text_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/item_pop_menu_select_iv"
            android:layout_toRightOf="@id/item_pop_menu_icon_iv"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:text="ssssssssssssss"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </RelativeLayout>
</LinearLayout>