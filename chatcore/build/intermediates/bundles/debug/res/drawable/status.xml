<level-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Free to chat -->
    <item android:drawable="@drawable/circle_status_green" android:minLevel="0" android:maxLevel="0" />
    <!-- Available -->
    <item android:drawable="@drawable/circle_status_green" android:minLevel="1" android:maxLevel="1" />
    <!-- Away -->
    <item android:drawable="@drawable/circle_status_yellow" android:minLevel="2" android:maxLevel="2" />
    <!-- Away for an extended period of time -->
    <item android:drawable="@drawable/circle_status_blue" android:minLevel="3" android:maxLevel="3" />
    <!-- Do not disturb -->
    <item android:drawable="@drawable/circle_status_red" android:minLevel="4" android:maxLevel="4" />
    <!-- Account is invisible -->
    <item android:drawable="@drawable/circle_status_grey" android:minLevel="5" android:maxLevel="5" />
    <!-- The user is unavailable -->
    <item android:drawable="@drawable/circle_status_grey" android:minLevel="6" android:maxLevel="6" />
    <!-- Account is in connection state -->
    <item android:drawable="@drawable/circle_status_grey" android:minLevel="7" android:maxLevel="7" />
    <!-- Account is unable to get presence information. Account is unsubscribed -->
    <item android:drawable="@drawable/circle_status_none" android:minLevel="8" android:maxLevel="8" />
    <!-- Public Account  -->
</level-list>
