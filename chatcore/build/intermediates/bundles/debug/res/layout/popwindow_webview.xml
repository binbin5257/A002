<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingRight="12dp"
    android:paddingTop="48dp">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#393a3f"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_pop_refresh"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#393a3f"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/pop_refresh"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="刷新"
                android:textColor="@color/White"
                android:textSize="16dp" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#191b1c" />

        <FrameLayout
            android:id="@+id/fl_pop_weixin"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#393a3f"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/pop_weixin"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="微信"
                android:textColor="@color/White"
                android:textSize="16dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#191b1c" />

        <FrameLayout
            android:id="@+id/fl_pop_weixincircle"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#393a3f"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/pop_weixincircle"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="朋友圈"
                android:textColor="@color/White"
                android:textSize="16dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#191b1c" />

        <FrameLayout
            android:id="@+id/fl_pop_qq"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#393a3f"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/pop_qq"
                android:layout_gravity="center_vertical"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="QQ"
                android:textColor="@color/White"
                android:textSize="16dp" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/pop_cancel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="#393a3f"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="取消"
        android:textColor="@color/White"
        android:textSize="16dp"
        android:visibility="gone" />

</LinearLayout>