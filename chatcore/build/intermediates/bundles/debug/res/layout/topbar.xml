<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <ImageView
            android:id="@+id/top_bg_iv"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:contentDescription="action_settings" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/top_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:singleLine="true"
                android:textColor="@color/title_color"
                android:textSize="@dimen/topbartitlesize" />

            <TextView
                android:id="@+id/top_title_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:drawablePadding="@dimen/margin_left_1_default"
                android:drawableRight="@drawable/top_title_btn_down"
                android:singleLine="true"
                android:text="立即用车"
                android:textColor="@color/title_color"
                android:textSize="@dimen/topbartitlesize"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/top_menu_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:drawableLeft="@drawable/topbar_menuclick"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/top_back_btn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableLeft="@drawable/bg_back"
            android:drawablePadding="-2dp"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:visibility="invisible" />


        <Button
            android:id="@+id/top_menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:text=""
            android:textColor="@color/title_color"
            android:textSize="14dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/top_menu_btn_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            />

        <TextView
            android:id="@+id/top_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/top_bg_iv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/title_color"
            android:textSize="@dimen/txt_size_14" />


        <ImageView
            android:id="@+id/top__iv"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_above="@id/top_bg_iv"
            android:background="#00000000"
            android:contentDescription="action_settings" />

    </RelativeLayout>

</RelativeLayout>