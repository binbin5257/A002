<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/pop_windows_show_width"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_menu_bg"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:background="@drawable/pop_alert_bg"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <TextView
                android:id="@+id/eventselected_popcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="车辆还未到达，是否取电子钥匙？"
                android:textColor="@color/pop_window_color"
                android:textSize="@dimen/txt_size_14" />

            <TextView
                android:id="@+id/eventselected_poplabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventselected_popcontent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="（注：取电子钥匙后开始计费）"
                android:textColor="@color/normal_text_color_red"
                android:textSize="@dimen/txt_size_12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_lin_height"
            android:layout_centerHorizontal="true"
            android:background="@color/line_bg" />


        <LinearLayout
            android:id="@+id/pop_confirm_botton_ryt"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pop_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/pop_confirm_lin_v"
                android:layout_weight="1"
                android:gravity="center"
                android:text="否"
                android:textColor="@color/important_color_blue"
                android:textSize="@dimen/txt_size_16" />

            <View
                android:id="@+id/pop_confirm_lin_v"
                android:layout_width="@dimen/height_top_lin_height"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/line_bg" />

            <TextView
                android:id="@+id/eventselected_popsend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/pop_confirm_lin_v"
                android:layout_weight="1"
                android:gravity="center"
                android:text="是"
                android:textColor="@color/important_color_blue"
                android:textSize="@dimen/txt_size_16" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
