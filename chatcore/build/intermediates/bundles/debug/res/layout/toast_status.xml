<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/pop_windows_show_width"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_record_background"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/toast_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_1_default"
        android:layout_marginRight="@dimen/margin_left_1_default"
        android:layout_marginTop="@dimen/margin_left_2_default"
        android:src="@drawable/toast_success"/>

    <TextView
        android:id="@+id/toast_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_left_2_default"
        android:layout_marginLeft="@dimen/margin_left_1_default"
        android:layout_marginRight="@dimen/margin_left_1_default"
        android:layout_marginTop="@dimen/margin_left_2_default"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/toast_text_size"/>


</LinearLayout>
